<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin"
            android:contentDescription="@string/cover_desc"
            android:src="@drawable/cover" />

        <Button
            android:id="@+id/runSnoodButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin"
            android:text="@string/run_snood_button">
            <requestFocus/>
        </Button>

        <TextView
            android:id="@+id/themeLabel"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theme_label" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/motoThemeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme_moto" />

            <RadioButton
                android:id="@+id/paperThemeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme_paper" />
        </RadioGroup>

        <TextView
            android:id="@+id/settingsLabel"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="@string/settings_label" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkBoxVibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vibration_check" />

            <CheckBox
                android:id="@+id/checkBoxSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sound_check" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkBoxToasts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toasts_check" />

            <CheckBox
                android:id="@+id/checkBoxFps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fps_check" />
        </TableRow>

        <TextView
            android:id="@+id/nameSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_edit_margin"
            android:layout_marginLeft="@dimen/string_margin"
            android:layout_marginTop="@dimen/string_margin"
            android:text="@string/name_text"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/player_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_edit_margin"
            android:layout_marginLeft="@dimen/text_edit_margin"
            android:ems="10"
            android:hint="@string/hint_text_edit"
            android:inputType="textPersonName"
            android:text="@string/player_text_edit"
            tools:ignore="RtlHardcoded" />

        <CheckBox
            android:id="@+id/checkBoxWriteScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scores_check" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_edit_margin"
            android:layout_marginLeft="@dimen/string_margin"
            android:layout_marginTop="@dimen/string_margin"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/animationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/animation_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/animationValueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_edit_margin"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </TableRow>

        <SeekBar
            android:id="@+id/animationBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/seek_margin"
            android:layout_marginTop="@dimen/seek_margin"
            android:max="@integer/animation_max"
            android:progress="@integer/animation_progress" />

        <TextView
            android:id="@+id/aboutHelpLabel"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_and_help_label" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin">

            <Button
                android:id="@+id/aboutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_button" />

            <Button
                android:id="@+id/helpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_button" />

            <!--Button
                android:id="@+id/demoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_button" /-->
        </TableRow>

        <TextView
            android:id="@+id/highScoreLabel"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="@string/high_score_label" />

        <TableLayout
            android:id="@+id/ButtonBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin">

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name1"
                    android:layout_height="wrap_content"
                    android:text="@string/player_1"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_1"
                    android:textSize="@dimen/text_size" />
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name2"
                    android:layout_height="wrap_content"
                    android:text="@string/player_2"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_2"
                    android:textSize="@dimen/text_size" />
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name3"
                    android:layout_height="wrap_content"
                    android:text="@string/player_3"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_3"
                    android:textSize="@dimen/text_size" />
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name4"
                    android:layout_height="wrap_content"
                    android:text="@string/player_4"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_4"
                    android:textSize="@dimen/text_size" />
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name5"
                    android:layout_height="wrap_content"
                    android:text="@string/player_5"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_5"
                    android:textSize="@dimen/text_size" />
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name6"
                    android:layout_height="wrap_content"
                    android:text="@string/player_6"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_6"
                    android:textSize="@dimen/text_size" />
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name7"
                    android:layout_height="wrap_content"
                    android:text="@string/player_7"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_7"
                    android:textSize="@dimen/text_size" />
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name8"
                    android:layout_height="wrap_content"
                    android:text="@string/player_8"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_8"
                    android:textSize="@dimen/text_size" />
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name9"
                    android:layout_height="wrap_content"
                    android:text="@string/player_9"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_9"
                    android:textSize="@dimen/text_size" />
            </TableRow>

            <TableRow android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/player_Name10"
                    android:layout_height="wrap_content"
                    android:text="@string/player_10"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/player_Score10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/score_10"
                    android:textSize="@dimen/text_size" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>